{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2018",
    "module": "ES2015",
    "allowJs": true,
    "declaration": true,
    "outDir": "./esm",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": []
  }
}
